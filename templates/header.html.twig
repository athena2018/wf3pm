
<header>
	<div class="jumbotron container-fluid">
		<div class="row">
    		<div class="col-xs-12 col-md-4 col-lg-3 center">
    			<img class="img-responsive" src="/img/scrum.png">
    		</div>
    		<div class="col-xs-12 col-md-8 col-lg-9">
        		<h1>Project manager</h1>
        		<div class="container-fluid">
            		<p>
            			Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam fringilla nec felis vitae 
            			malesuada. Aenean ac commodo lacus. Aliquam sed auctor turpis. Nam suscipit tellus sit amet 
            			neque scelerisque, ut sagittis lectus dictum.
            		</p>
        		</div>
    		</div>
		</div>
	</div>

	<div class="container-fluid">
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed"
						data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
						aria-expanded="false">
						<span class="sr-only">Toggle navigation</span> <span
							class="icon-bar"></span> <span class="icon-bar"></span> <span
							class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="{{ path('homepage') }}">Project manager</a>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse"
					id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li class="active">
							<a href="{{ path('homepage') }}">
							    {{ 'HEADER.HOME'|trans }} <span class="sr-only">(current)</span>
							</a>
						</li>
						<li class="dropdown"><a href="#" class="dropdown-toggle"
							data-toggle="dropdown" role="button" aria-haspopup="true"
							aria-expanded="false">{{ 'HEADER.PROJECT'|trans }} <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="{{ path('list_products') }}">{{ 'HEADER.LIST_PROJECT'|trans }}</a></li>
								
					            {% if is_granted('ROLE_ACTIVE') %}
									<li><a href="{{ path('add_product') }}">{{ 'HEADER.ADD_PROJECT'|trans }}</a></li>
								{% endif %}
							</ul>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li class="dropdown"><a href="#" class="dropdown-toggle"
							data-toggle="dropdown" role="button" aria-haspopup="true"
							aria-expanded="false">{{ 'HEADER.LOCALE.ITEM'|trans }} <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li>
								{% set enRouteVar = {'_locale': 'en'}|merge(routeAttr|default([])) %}
									<a href="{{ path(app.request.attributes.get('_route'), enRouteVar) }}">{{ 'HEADER.LOCALE.EN'|trans }}</a>
								</li>
								<li>
								{% set frRouteVar = {'_locale': 'fr'}|merge(routeAttr|default([])) %}
									<a href="{{ path(app.request.attributes.get('_route'), frRouteVar) }}">{{ 'HEADER.LOCALE.FR'|trans }}</a>
								</li>
							</ul>
						</li>
						
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li><a href="{{ path('logout') }}">{{ 'HEADER.LOGOUT'|trans }}</a></li>
						{% else %}
    						<li><a href="{{ path('login') }}">{{ 'HEADER.LOGIN'|trans }}</a></li>
    						<li><a href="{{ path('user_register') }}">{{ 'HEADER.REGISTER'|trans }}</a></li>
						{% endif %}
						
					</ul>
				</div>
				<!-- /.navbar-collapse -->
			</div>
			<!-- /.container-fluid -->
		</nav>
	</div>
</header>

{% set infoMessages = app.flashes('info') %}
{% if infoMessages is not empty %}
<div class="container">
	{% for message in infoMessages %}
		<p class="bg-success p-1">{{ message }}</p>
	{% endfor %}
</div>
{% endif %}
